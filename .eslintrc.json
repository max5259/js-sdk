{
    "env": {
        "node": true,
        "es2021": true,
        "jest": true,
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "quotes": ["error", "single"],
        "object-curly-spacing": ["error", "always"],
        "semi": ["error", "always", { "omitLastInOneLineBlock": true}],
        "indent": ["error", 4, {"SwitchCase": 1}],
        "space-infix-ops": "error"
    }
}
